{
  // VIM MOTIONS SETTINGS
  "vim.useSystemClipboard": true,
  "vim.leader": "<Space>",
  "vim.hlsearch": true,
  "vim.highlightedyank.enable": true,
  // BOOKMARKS EXTENSION
  "vim.normalModeKeyBindings": [
    {
      "before": [
        "<leader>",
        "m"
      ],
      "commands": [
        "bookmarks.toggle"
      ]
    },
    {
      "before": [
        "<leader>",
        "b"
      ],
      "commands": [
        "bookmarks.listFromAllFiles"
      ]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    // LANGUAGE TOOLS
    // Text Editor Additions
    {
      "before": [
        "K"
      ],
      "commands": [
        "lineBreakInsert"
      ],
      "silent": true
    },
    // NAVIGATION
    // switch b/w buffers
    {
      "before": [
        "<S-h>"
      ],
      "commands": [
        ":bprevious"
      ]
    },
    {
      "before": [
        "<S-l>"
      ],
      "commands": [
        ":bnext"
      ]
    },
    // splits
    {
      "before": [
        "leader",
        "v"
      ],
      "commands": [
        ":vsplit"
      ]
    },
    {
      "before": [
        "leader",
        "s"
      ],
      "commands": [
        ":split"
      ]
    },
    // panes
    {
      "before": [
        "leader",
        "h"
      ],
      "commands": [
        "workbench.action.focusLeftGroup"
      ]
    },
    {
      "before": [
        "leader",
        "j"
      ],
      "commands": [
        "workbench.action.focusBelowGroup"
      ]
    },
    {
      "before": [
        "leader",
        "k"
      ],
      "commands": [
        "workbench.action.focusAboveGroup"
      ]
    },
    {
      "before": [
        "leader",
        "l"
      ],
      "commands": [
        "workbench.action.focusRightGroup"
      ]
    },
    {
      "before": [
        "leader",
        "e"
      ],
      "commands": [
        "workbench.action.focusActiveEditorGroup"
      ]
    },
    // NICE TO HAVE
    {
      "before": [
        "leader",
        "w"
      ],
      "commands": [
        ":w!"
      ]
    },
    {
      "before": [
        "leader",
        "q"
      ],
      "commands": [
        ":q!"
      ]
    },
    {
      "before": [
        "leader",
        "x"
      ],
      "commands": [
        ":x!"
      ]
    },
    {
      "before": [
        "[",
        "d"
      ],
      "commands": [
        "editor.action.marker.prev"
      ]
    },
    {
      "before": [
        "]",
        "d"
      ],
      "commands": [
        "editor.action.marker.next"
      ]
    },
    {
      "before": [
        "<leader>",
        "c",
        "a"
      ],
      "commands": [
        "editor.action.quickFix"
      ]
    },
    {
      "before": [
        "leader",
        "f"
      ],
      "commands": [
        "workbench.action.quickOpen"
      ]
    },
    {
      "before": [
        "leader",
        "t"
      ],
      "commands": [
        "workbench.action.showAllSymbols"
      ]
    },
    {
      "before": [
        "leader",
        "r"
      ],
      "commands": [
        "editor.action.rename"
      ]
    },
    {
      "before": [
        "leader",
        "p"
      ],
      "commands": [
        "editor.action.formatDocument"
      ]
    },
    {
      "before": [
        "g",
        "h"
      ],
      "commands": [
        "editor.action.showDefinitionPreviewHover"
      ]
    },
    {
      "before": [
        "leader",
        "R"
      ],
      "commands": [
        "editor.action.refactor"
      ]
    },
  ],
  "vim.visualModeKeyBindings": [
    // Stay in visual mode while indenting
    {
      "before": [
        "<"
      ],
      "commands": [
        "editor.action.outdentLines"
      ]
    },
    {
      "before": [
        ">"
      ],
      "commands": [
        "editor.action.indentLines"
      ]
    },
    // Move selected lines while staying in visual mode
    {
      "before": [
        "J"
      ],
      "commands": [
        "editor.action.moveLinesDownAction"
      ]
    },
    {
      "before": [
        "K"
      ],
      "commands": [
        "editor.action.moveLinesUpAction"
      ]
    },
    // toggle comment selection
    {
      "before": [
        "leader",
        "c"
      ],
      "commands": [
        "editor.action.commentLine"
      ]
    }
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": [
        "j",
        "j"
      ],
      "after": [
        "<Esc>"
      ]
    }
  ],
  // Python settings
  // "python.languageServer": "None",
  "python.analysis.typeCheckingMode": "standard",
  "python.analysis.stubPath": ".vscode",
  "files.associations": {
    "*.ipynb": "python",
    "*.yml": "yaml"
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "python.terminal.shellIntegration.enabled": true,
  "python.analysis.supportAllPythonDocuments": true,
  "python.analysis.extraPaths": [
    "src",
    "lib",
    "resources"
  ],
  // Other languages
  "[jsonc]": {
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.suggest.insertMode": "replace",
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "[dockercompose]": {
    "editor.defaultFormatter": "docker.docker"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
  },
  "yaml.schemas": {
    "https://squidfunk.github.io/mkdocs-material/schema.json": "mkdocs.yml",
    "file:///c%3A/Users/NeyasGuruswamy/.vscode/extensions/atlassian.atlascode-4.0.17/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml"
  },
  "yaml.customTags": [
    "!ENV scalar",
    "!ENV sequence",
    "!relative scalar",
    // "tag:yaml.org,2002:python/name:material.extensions.emoji.to_svg",
    // "tag:yaml.org,2002:python/name:material.extensions.emoji.twemoji",
    // "tag:yaml.org,2002:python/name:pymdownx.superfences.fence_code_format",
    // "tag:yaml.org,2002:python/object/apply:pymdownx.slugs.slugify mapping"
  ],
  "docker.extension.enableComposeLanguageServer": false,
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "notebook.defaultFormatter": "charliermarsh.ruff",
  "notebook.output.scrolling": true,
  // LLP & AI
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.chat.summarizeAgentConversationHistory.enabled": false,
  "chat.mcp.discovery.enabled": {
    "claude-desktop": false,
    "windsurf": false,
    "cursor-global": false,
    "cursor-workspace": false
  },
  "chat.mcp.autostart": "newAndOutdated",
  "github.copilot.chat.newWorkspace.useContext7": true,
  // Remote/WSL Settings
  "remote.autoForwardPortsSource": "hybrid",
  "remoteHub.commitDirectlyWarning": "off",
  "streamdeck.serverHost": "0.0.0.0",
  "security.allowedUNCHosts": [
    "wsl.localhost"
  ],
  // VSCode Application Settings
  "security.workspace.trust.untrustedFiles": "open",
  "editor.defaultFormatter": "charliermarsh.ruff",
  "workbench.colorTheme": "Atom One Dark",
  "window.menuBarVisibility": "compact",
  "workbench.activityBar.location": "top",
  "workbench.sideBar.location": "right",
  "window.commandCenter": false,
  "editor.formatOnSave": true,
  "editor.suggest.insertMode": "replace",
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "editor.linkedEditing": true,
  "launch": {},
  "editor.minimap.enabled": false,
  "workbench.iconTheme": "vscode-icons",
  "zenMode.hideLineNumbers": false,
  "editor.lineNumbers": "relative",
  "editor.fontFamily": "Cascadia Code",
  "editor.fontLigatures": true,
  "workbench.settings.applyToAllProfiles": [
    "terminal.integrated.shellIntegration.showCommandGuide"
  ],
  "workbench.editor.empty.hint": "hidden",
  // Git settings
  "git.autofetch": true,
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4.1",
  "git.confirmSync": false,
  // Terminal Settings
  "terminal.integrated.profiles.windows": {
    "Git Bash": {
      "path": "C:\\Program Files\\Git\\bin\\bash.exe",
      "args": [
        "-l"
      ]
    }
  },
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  // Other Extension Settings
  "redhat.telemetry.enabled": false,
  "containers.containerClient": "com.microsoft.visualstudio.containers.docker",
  "containers.orchestratorClient": "com.microsoft.visualstudio.orchestrators.dockercompose",
  "extensions.ignoreRecommendations": true,
  "docker.extension.experimental.composeCompletions": true,
  "vsicons.dontShowNewVersionMessage": true,
  "git.enableSmartCommit": true,
  "bookmarks.label.suggestion": "suggestWhenSelectedOrLineWhenNoSelected",
  "bookmarks.saveBookmarksInProject": true,
  "atlascode.rovodev.showEntitlementNotifications": false,
  "ruff.format.preview": true,
  "ruff.configurationPreference": "filesystemFirst",
  "python.analysis.inlayHints.callArgumentNames": "all",
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.pytestParameters": true,
  "python.analysis.inlayHints.variableTypes": true,
  "markdownlint.config": {},
  "chat.mcp.gallery.enabled": true,
  "git.blame.editorDecoration.enabled": true,
  "scm.alwaysShowRepositories": true,
  "scm.defaultViewMode": "tree",
  "files.exclude": {
    "__pycache__": true,
    ".pytest_cache/": true,
    ".ruff_cache/": true
  },
}